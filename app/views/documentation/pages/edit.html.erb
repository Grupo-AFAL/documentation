<% content_for :container_class, 'is-max-desktop' %>

<div class="level">
  <div class="level-left">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><%= link_with_icon "Back to pages", 'arrow-back', pages_path %></li>
      </ul>
    </nav>
  </div>

  <div class="level-right">
    <%= link_to page_images_path(@page), class: 'button is-primary',
        data: { action: 'modal#open', 'wrapper-class': 'extra-wide' } do %>
      <%= icon_tag('image') %>
      <span>Images</span>
    <% end %>
  </div>
</div>

<%= render "form", page: @page %>
